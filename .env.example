# Environment Configuration (development or production)
ENVIRONMENT=development

# MongoDB Configuration
MONGO_USERNAME=admin
MONGO_PASSWORD=password
MONGO_DATABASE=ticket_manager

# MongoDB Connection URL (used when Mongo runs in Docker Compose)
# Uses authSource=admin and SCRAM-SHA-256 authentication
MONGODB_URL=mongodb://${MONGO_USERNAME}:${MONGO_PASSWORD}@mongodb:27017/?authSource=admin&authMechanism=SCRAM-SHA-256

# Database Name (can reference MONGO_DATABASE)
DATABASE_NAME=${MONGO_DATABASE:-ticket_manager}

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Admin Configuration (Initial admin credentials - will be stored in database)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password-in-production
