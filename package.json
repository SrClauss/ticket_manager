{
  "name": "ticket_manager",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.4.8"
  },
  "scripts": {
    "build:css": "npx tailwindcss -i ./app/static/css/tailwind_input.css -o ./app/static/css/tailwind.css --minify --content './app/templates/**/*.html' './app/**/*.py'",
    "build:css:watch": "npx tailwindcss -i ./app/static/css/tailwind_input.css -o ./app/static/css/tailwind.css --watch --content './app/templates/**/*.html' './app/**/*.py'"
  }
}
